<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="../css/user.css" />
  </head>
  <body>
    <%- include(header) %>

    <div class="container">
      <h3>Manage User</h3>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#createUser">
        Create a new user
      </button>

      <!-- Modal -->
      <div
        class="modal fade"
        id="createUser"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">
                Create User
              </h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form class="form_create">
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">login name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="inputEmail4"
                      name="LoginName" />
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="inputPassword4"
                      name="password" />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="inputEmail4"
                      name="Email" />
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="inputPassword4"
                      name="Name" />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Phone Number</label>
                    <input
                      type="text"
                      class="form-control"
                      id="inputEmail4"
                      name="PhoneNumber" />
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputAddress">Address</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    name="address" />
                </div>

                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="inputState">Sex</label>
                    <select id="inputState" class="form-control" name="sex">
                      <option value="0">Female</option>
                      <option value="1">Male</option>
                    </select>
                  </div>
                  <div class="form-group ">
                    <label for="inputState">Birtday</label>
                    <input type="date" class="form-control" name="date" />
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal">
                Close
              </button>
              <button type="submit" class="btn btn-primary btn_create">
                Create
              </button>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">id</th>
            <th scope="col">loginName</th>
            <th scope="col">userName</th>
            <th scope="col">email</th>
            <th scope="col">birthDay</th>
            <th scope="col">address</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <script>
            var dataUser =<%-JSON.stringify(data)%>
            console.log(dataUser);
          </script>
          <% for (let i = 0; i < data.length; i++){%> <% 
            const dateObject = new Date(data[i].birthDay); 
            const formattedDate = dateObject.toISOString().substring(0,10); %>
          <tr>
            <th scope="row"><%=data[i].id%></th>
            <td><%=data[i].loginName%></td>
            <td><%=data[i].userName%></td>
            <td><%=data[i].email%></td>
            <td><%=formattedDate%></td>
            <td><%=data[i].address%></td>
            <td>
              <button
                type="button"
                class="edit_btn"
                data-toggle="modal"
                data-target="#editUser" id="<%=i%>">
                <i class="fa-solid fa-pen-to-square"></i>
              </button>
              <button type="button" class="delete_btn" id="<%=data[i].id%>">
                <i class="fa-solid fa-trash"></i>
              </button>
             
            </td>
          </tr>
          <% }%>
        </tbody>
      </table>
    </div>
    <!-- Modal -->
    <div
      class="modal fade modal_edit"
      id="editUser"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLongTitle"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Create User</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="form_update">
             
                <div class="form-group ">
                  <label for="LoginName">login name</label>
                  <input readonly
                    type="text"
                    class="form-control"
                    id="LoginName"
                    name="LoginName" />
                    
                </div>
                
                <input
                type="hidden"
                class="form-control"
                id="id"
                name="id" />
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="Email">Email</label>
                  <input
                  readonly
                    type="email"
                    class="form-control"
                    id="Email"
                    name="Email" />
                </div>
                <div class="form-group col-md-6">
                  <label for="Name">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="Name"
                    name="Name" />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="Phone_Number">Phone Number</label>
                  <input
                  readonly
                    type="text"
                    class="form-control"
                    id="Phone_Number"
                    name="PhoneNumber" />
                </div>
              </div>
              <div class="form-group">
                <label for="Address">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="Address"
                  name="address" />
              </div>

              <div class="form-row">
                <div class="form-group col-md-4">
                  <label for="Sex">Sex</label>
                  <select id="Sex" class="form-control" name="sex">
                    <option value="0">Female</option>
                    <option value="1">Male</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="Birtday">Birtday</label>
                  <input type="date" class="form-control" name="date" id="Birtday"/>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal">
              Close
            </button>
            <button type="submit" class="btn btn-primary btn_update">
              Update
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="../js/admin/user.js"></script>
</html>
